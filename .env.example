# SwitchBot API credentials
# Get your Access Token and Secret from https://switch-bot.app/
SWITCHBOT_ACCESS_TOKEN=your_access_token_here
SWITCHBOT_SECRET=your_secret_here

# SwitchBot Floor Lamp Device ID
# Find your Device ID from the SwitchBot app or API
SWITCHBOT_FLOOR_LAMP_DEVICE_ID=your_device_id_here

# Weather city code (JMA area code)
# Example: 130010 = Tokyo, 270000 = Osaka, 400000 = Fukuoka
# See https://weather.tsukumijima.net/api/forecast/cities for full list
WEATHER_CITY_CODE=130010

# Color mode (optional, default: 0)
# Set to 1 to use color temperature mode (2700K-6500K)
# Set to 0 or leave empty to use RGB mode
USE_COLOR_TEMPERATURE=0

# Discord notification settings (optional)
# Set DISCORD_ENABLED to 0 to disable Discord notifications
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here
DISCORD_ENABLED=1
DISCORD_TIMEOUT=10
